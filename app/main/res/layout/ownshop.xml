<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkshopActivity">


    <LinearLayout
        android:id="@+id/statusbar_ownshop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/prompts1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="300dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:text="金  KG" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigationbar_ownshop"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/navigation"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_workshop_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="工坊" />

        <Button
            android:id="@+id/button_sell_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="贩卖" />

        <Button
            android:id="@+id/button_market_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:background="#00000000"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="市场" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/barname1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="我的小店"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sell_ownshop"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="@drawable/backgroundredwall1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/window1_ownshop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/window1"/>
                <TextView
                    android:id="@+id/Textwindow1_ownshop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/window2_ownshop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/window1" />
                <TextView
                    android:id="@+id/Textwindow2_ownshop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/window3_ownshop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:padding="12dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/window1" />
                <TextView
                    android:id="@+id/Textwindow3_ownshop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                     />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/barname1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2_ownshop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="仓库"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    //仓库

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/store_ownshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundwall2"

            />

    </LinearLayout>
</LinearLayout>

